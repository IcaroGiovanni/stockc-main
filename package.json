{
  "name": "projeto-estoque",
  "version": "1.0.0",
  "description": "Sistema completo de controle de estoque com autenticação, gestão de usuários, produtos e relatórios",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "migrate": "node migration.js",
    "setup": "npm install && node migration.js",
    "docker:build": "docker build -t stockctrl .",
    "docker:run": "docker run -p 3000:3000 stockctrl"
  },
  "keywords": [
    "estoque",
    "inventory",
    "management",
    "nodejs",
    "express",
    "mysql",
    "jwt"
  ],
  "author": "Seu Nome",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/projeto-estoque.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/projeto-estoque/issues"
  },
  "homepage": "https://github.com/seu-usuario/projeto-estoque#readme"
}
