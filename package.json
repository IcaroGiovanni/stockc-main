{
  "name": "projeto-estoque",
  "version": "1.0.0",
  "description": "Sistema completo de controle de estoque com autenticação, gestão de usuários, produtos e relatórios",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.js' --collectCoverageFrom='!src/**/*.test.js'",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate": "node migration.js",
    "migrate:test": "NODE_ENV=test node migration.js",
    "setup": "npm install && npm run migrate",
    "setup:test": "npm install && npm run migrate:test",
    "docker:build": "docker build -t stockctrl .",
    "docker:run": "docker run -p 3000:3000 stockctrl",
    "docker:compose": "docker-compose up -d",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=moderate",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "db:optimize": "node database-optimization.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "precommit": "npm run lint:staged && npm test"
  },
  "keywords": [
    "estoque",
    "inventory",
    "management",
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "docker",
    "redis"
  ],
  "author": "Seu Nome",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "redis": "^4.6.13",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "artillery": "^2.0.0-27",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/projeto-estoque.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/projeto-estoque/issues"
  },
  "homepage": "https://github.com/seu-usuario/projeto-estoque#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
